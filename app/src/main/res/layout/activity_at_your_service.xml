<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".atYourService.AtYourService">

    <EditText
        android:id="@+id/event_search"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="120dp"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@id/events_recycler_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="@string/event_search_placeholder"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toTopOf="@id/events_recycler_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/event_search"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/event_search_button"
        android:onClick="getEvents"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/events_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/event_search"
        />

</androidx.constraintlayout.widget.ConstraintLayout>